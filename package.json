{
  "name": "interaqt-cms-example",
  "version": "1.0.0",
  "description": "CMS Style Management System built with interaqt framework",
  "main": "index.js",
  "type": "module",
  "directories": {
    "test": "tests"
  },
  "workspaces": [
    "integrations/*/",
    "frontend"
  ],
  "scripts": {
    "test": "CONFIG_MODE=local NODE_ENV=development vitest run",
    "test:integration": "CONFIG_MODE=local tsx testscripts/test-api-integration.ts",
    "check": "tsc --noEmit",
    "typecheck": "tsc --noEmit",
    "dashboard": "cd dashboard && npm run dev",
    "coverage": "CONFIG_MODE=local vitest run --coverage",
    "dev:setup:main": "CONFIG_MODE=local tsx main-component/setupMain.ts",
    "dev:start:main": "CONFIG_MODE=local NODE_ENV=development tsx main-component/startMain.ts",
    "dev:start:async-task": "CONFIG_MODE=local NODE_ENV=development tsx async-task-component/startAsyncTask.ts",
    "build:frontend": "cd frontend && BASE_URL=/api npm run build",
    "build:frontend:dev": "cd frontend && BASE_URL=/api NODE_ENV=development npm run build",
    "build:frontend:test": "cd frontend && BASE_URL=/api NODE_ENV=test npm run build",
    "setup:main": "tsx main-component/setupMain.ts",
    "start:main": "NODE_ENV=production npm run build:frontend && NODE_ENV=production tsx main-component/startMain.ts",
    "start:async-task": "NODE_ENV=production tsx async-task-component/startAsyncTask.ts",
    "reset": "CONFIG_MODE=local tsx scripts/reset.ts",
    "sync-agent": "tsx scripts/sync-agent.ts",
    "create-frontend": "tsx scripts/create-frontend.ts",
    "generate-interaction-api": "tsx scripts/generate-interaction-api.ts",
    "generate-openapi-spec": "tsx scripts/generate-openapi-spec.ts",
    "generate-openapi-types": "npx openapi-typescript frontend/api/openapi.json -o frontend/api/openapi-types.generated.ts",
    "extract-schema": "tsx scripts/extract-schema.ts",
    "generate-attributeQuery-types": "tsx scripts/generate-attributeQuery-types.ts",
    "generate-attributeQuery-zod": "tsx scripts/generate-attributeQuery-zod.ts",
    "generate-frontend-api": "npm run generate-openapi-spec && npm run generate-openapi-types && npm run generate-custom-endpoints && npm run extract-schema && npm run generate-attributeQuery-types && npm run generate-attributeQuery-zod && npm run generate-interaction-api",
    "generate-custom-endpoints": "tsx scripts/generate-custom-endpoints.ts",
    "validate-integrations": "tsx integrations/validate-workspaces.ts",
    "generate:integration": "tsx scripts/generate-aggregated-integration.ts",
    "generate:aggregates": "tsx scripts/generate-aggregates.ts",
    "generate-config": "tsx config/generate-config.ts",
    "verify-config": "tsx scripts/verify-config.ts",
    "test:async-task": "CONFIG_MODE=local tsx tests/test-async-task-component.ts"
  },
  "author": "sskyy",
  "license": "ISC",
  "dependencies": {
    "@electric-sql/pglite": "^0.3.8",
    "@hono/node-server": "^1.19.3",
    "@hono/zod-openapi": "^1.1.5",
    "zod": "^4.1.13",
    "@interaqt/uuidv7": "^1.0.0",
    "@temporalio/activity": "^1.13.2",
    "@temporalio/client": "^1.13.2",
    "@temporalio/worker": "^1.13.2",
    "@temporalio/workflow": "^1.13.2",
    "bcrypt": "^6.0.0",
    "bcryptjs": "^3.0.2",
    "better-sqlite3": "^12.2.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^17.2.2",
    "hono": "^4.9.7",
    "interaqt": "^0.8.12",
    "pg": "^8.16.3",
    "sharp": "^0.33.0",
    "tsx": "^4.21.0",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/cookie-parser": "^1.4.9",
    "@types/node": "^24.3.1",
    "@types/uuid": "^10.0.0",
    "@types/ws": "^8.18.1",
    "esbuild": "^0.25.9",
    "openapi-typescript": "^7.10.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.9.2",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.4",
    "wrangler": "^4.38.0"
  }
}
