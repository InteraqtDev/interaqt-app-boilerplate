{
  "name": "deploy-tool",
  "version": "1.0.0",
  "description": "Deployment tool based on Terraform for Interaqt applications",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "deploy-tool": "./dist/index.js"
  },
  "files": [
    "dist/",
    "terraform/"
  ],
  "scripts": {
    "build": "tsc && chmod +x dist/index.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "generate-config": "tsx src/index.ts generate-config",
    "deploy": "tsx src/index.ts deploy",
    "destroy": "tsx src/index.ts destroy",
    "plan": "tsx src/index.ts plan"
  },
  "keywords": [
    "deployment",
    "terraform",
    "kubernetes"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@kubernetes/client-node": "^0.20.0",
    "commander": "^11.0.0",
    "chalk": "^5.0.0",
    "ora": "^7.0.0",
    "inquirer": "^9.0.0",
    "dotenv": "^16.0.0",
    "joi": "^17.0.0",
    "winston": "^3.0.0"
  },
  "devDependencies": {
    "typescript": "^5.0.0",
    "tsx": "^4.0.0",
    "vitest": "^1.0.0",
    "@types/node": "^20.0.0",
    "@types/inquirer": "^9.0.0"
  }
}
